# Mech Services Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_DB_NAME=your_database_name

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
VULTR_API_KEY=your-vultr-api-key-here

# Service URLs
QUEUE_SERVICE_URL=http://queue-service:3003
STORAGE_SERVICE_URL=http://storage-service:3007
LLM_SERVICE_URL=http://llm-service:3008

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Security
API_KEY_PREFIX=mech_
REQUIRE_API_KEY=true

# Infrastructure
DROPLET_IP=your.server.ip.here
SSH_KEY_PATH=~/.ssh/your_key
DOCKER_REGISTRY=your-registry-url