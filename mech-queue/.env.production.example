# DigitalOcean Production Environment Variables
# Copy this file to .env.production and fill in your values

# DigitalOcean Managed Valkey Configuration
VALKEY_HOST=your-valkey-cluster.db.ondigitalocean.com
VALKEY_PORT=25061
VALKEY_PASSWORD=your-valkey-password
VALKEY_DB=0

# Security
MASTER_API_KEY=your-secure-master-key-here

# Email Service (choose one)
# Option 1: SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Option 2: AWS SES
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Optional: MongoDB for webhook persistence
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/queue-service

# Optional: OpenAI for AI processing queue
OPENAI_API_KEY=sk-your_openai_api_key