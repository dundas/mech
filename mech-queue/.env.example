# Server Configuration
NODE_ENV=development
PORT=3003

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration (optional)
# MONGODB_URI=mongodb://localhost:27017/queue-service

# Security
API_KEY_HEADER=x-api-key
MASTER_API_KEY=master_key_change_this_in_production
ENABLE_API_KEY_AUTH=true

# Worker Configuration
MAX_WORKERS_PER_QUEUE=5
DEFAULT_JOB_ATTEMPTS=3
DEFAULT_JOB_BACKOFF_DELAY=1000

# Queue Configuration
REMOVE_COMPLETED_JOBS_AFTER=3600
REMOVE_FAILED_JOBS_AFTER=86400

# Service Integrations
# OPENAI_API_KEY=your_openai_api_key

# Monitoring
ENABLE_PROMETHEUS_METRICS=false
METRICS_PORT=3004

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100